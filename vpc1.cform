                "ToPort" : "8983",
                "CidrIp" : "10.10.1.0/24"
            }, {
                "IpProtocol" : "TCP",
                "FromPort" : "5432",
                "ToPort" : "5432",
                "CidrIp" : "10.10.1.0/24"
            }, {
                "IpProtocol" : "TCP",
                "FromPort" : "5672",
                "ToPort" : "5672",
                "CidrIp" : "10.10.1.0/24"
            }, {
                "IpProtocol" : "TCP",
                "FromPort" : "16379",
                "ToPort" : "16379",
                "CidrIp" : "10.10.1.0/24"
            }
            ],
            "VpcId" : { "Ref" : "vpc1" },
            "Tags" :  [ { "Key" : "Name", "Value" : "chefServerSecurityGroup" } ]
          }
        },
        "chefServer": {
            "DependsOn" : [ "vpc1", "chefServerSecurityGroup", "internalEast1a" ],
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "KeyName": "HomeTestKey",
                "DisableApiTermination": "false",
                "ImageId": { "Fn::FindInMap" : [ "RegionAmiMap", { "Ref" : "AWS::Region" }, "ubuntu1404" ] },
                "InstanceType": "t2.micro",
                "Monitoring": "false",
                "SecurityGroupIds" : [ { "Ref" : "chefServerSecurityGroup" } ],
                "SubnetId" : { "Ref" : "internalEast1a" },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "chefServer"
                    }
                ],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#!/bin/bash -ex",
                                "wget -O /tmp/chef-server-core_12.1.0-1_amd64.deb https://web-dl.packagecloud.io/chef/stable/packages/ubuntu/trusty/chef-server-core_12.1.0-1_amd64.deb"
                            ]
                        ]
                    }
                }
        }
